{
  "name": "boilerplate-server-node",
  "version": "0.5.1",
  "description": "Shift3 nodejs boilerplate",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shift3/boilerplate-server-node.git"
  },
  "keywords": [
    "NodeJs",
    "Boilerplate",
    "Shift3"
  ],
  "author": "Michael Wallert",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Shift3/boilerplate-server-node/issues"
  },
  "homepage": "https://github.com/Shift3/boilerplate-server-node#readme",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "db:migrate-testdb": "ts-node -r tsconfig-paths/register node_modules/.bin/typeorm migration:run -f ./testormconfig.json",
    "db:migrate": "ts-node -r tsconfig-paths/register node_modules/.bin/typeorm migration:run",
    "db:new-migration": "ts-node -r tsconfig-paths/register node_modules/.bin/typeorm migration:generate",
    "db:revert-migration": "ts-node -r tsconfig-paths/register node_modules/.bin/typeorm migration:revert",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:prod-docker": "node /opt/node/app/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --maxWorkers=2",
    "test:watch": "jest --watch --maxWorkers=2",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --maxWorkers=2",
    "test:full": "npm run test && npm run test:e2e"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.6",
    "@nestjs/core": "^7.6.6",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.6",
    "@nestjs/swagger": "^4.7.12",
    "@nestjs/typeorm": "^7.1.5",
    "@sentry/node": "^6.0.2",
    "@types/morgan": "^1.9.2",
    "aws-sdk": "^2.831.0",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
    "csurf": "^1.11.0",
    "helmet": "^4.4.1",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.17",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.5.1",
    "pug": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.30",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.6",
    "@types/express": "^4.17.11",
    "@types/jest": "26.0.20",
    "@types/node": "^14.14.22",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "moduleNameMapper": {
      "@common/(.*)": "<rootDir>/common/$1",
      "@consts/(.*)": "<rootDir>/common/consts/$1",
      "@database/(.*)": "<rootDir>/database/$1",
      "@decorators": "<rootDir>/common/decorators/index",
      "@environment": "<rootDir>/environment",
      "@guards": "<rootDir>/common/guards/index",
      "@metadata": "<rootDir>/meta-data",
      "@mockedclasses": "<rootDir>/common/mocked-classes/index",
      "@models": "<rootDir>/database/models/index",
      "@modules/(.*)": "<rootDir>/modules/$1",
      "@seeds": "<rootDir>/database/seeds/index",
      "@utilities/(.*)": "<rootDir>/common/utilities/$1"
    },
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "coveragePathIgnorePatterns": [
      "consts",
      "dto",
      "environment",
      "migrations",
      "node_modules"
    ],
    "testEnvironment": "node"
  }
}
